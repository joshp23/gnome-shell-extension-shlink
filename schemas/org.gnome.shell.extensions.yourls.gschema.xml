<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions">

    <schema path="/org/gnome/shell/extensions/yourls/" id="org.gnome.shell.extensions.yourls">

        <key type="as" name="shorten-and-copy-shortcut">
            <default><![CDATA[['<Super><Control>S']]]></default>
        </key>

        <key type="s" name="instance-url">
            <default>
                "https://my-yourls-instance.example.com"
            </default>
            <summary>yourls instance</summary>
        </key>

        <key type="s" name="api-key">
            <default>
                ""
            </default>
            <summary>API Key</summary>
        </key>
    </schema>
</schemalist>
